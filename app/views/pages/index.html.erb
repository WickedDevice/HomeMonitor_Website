<table class="table">
  <%= paginate @pages %>
  <thead>
    <tr>
      <th>Title</th>
      <th>Long Title</th>
      <th>Last edited on</th>
      <th colspan="3" class="options">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.long_title %></td>
        <td><%= page.updated_at.in_time_zone.to_formatted_s(:custom) %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @pages %>
<br>

<%= link_to 'New Page', new_page_path %>