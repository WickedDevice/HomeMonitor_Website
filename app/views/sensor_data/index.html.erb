<% provide :title, "sensor_data" %>
<p>
  Download:
  <%= link_to "CSV", sensor_data_path(format: "csv") %>
</p>
<%= paginate @sensor_data %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Sensor ID</th>
      <th>Data</th>
      <th>Device id</th>
      <th>Sensor ID</th>
      <th>Building id</th>
      <th>Time recorded</th>
      <th colspan="3" class="options">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @sensor_data.each do |sensor_datum| %>
      <tr>
        <td><%= sensor_datum.title%></td>
        <td><%= sensor_datum.data %></td>
        <td><%= sensor_datum.device_id %></td>
        <td><%= sensor_datum.sensor_id %></td>
        <td><%= sensor_datum.building_id %></td>
        <td><%= sensor_datum.created_at.in_time_zone.to_formatted_s(:custom) %></td>
        <td><%= link_to 'Show', sensor_datum %></td>
        <td><%= link_to 'Edit', edit_sensor_datum_path(sensor_datum) %></td>
        <td><%= link_to 'Destroy', sensor_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @sensor_data %>
<br>

<%= link_to 'New Sensor datum', new_sensor_datum_path %>
