<% #This code should probably not be right here
if current_user.nil?
	user_button = link_to("Login", { :controller => "sessions", :action => "new" })
	ul_class = "nav navbar-right navbar-nav navbar-custom"
else
	user_button = link_to(current_user.name, current_user)
	ul_class = "nav navbar-collapse collapse navbar-right navbar-nav navbar-custom"
end %>

<header class="navbar navbar-fixed-top navbar-custom">
	<div class="navbar-inner">
		<div class="container">
			<div class="navbar-header">

				<div id='logo'>
					<%= link_to image_tag("wicked_device_logo.jpg"), "http://wickeddevice.com" %>
					<%= link_to "Home", root_path %>
				</div>

				<div id="title-small" class="nav navbar-nav nav-center title">
					<%= content_for(:navbar_title) || yield(:title) %>
				</div>

				<% unless current_user.nil? %>
				<button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<% end %>
			</div>

			<div>
				<div id="title-large" class="nav navbar-nav nav-center title">
					<%= content_for(:navbar_title) || yield(:title) %>
				</div>
				<ul class="<%= ul_class%>" >
					<li><%= link_to "FAQ", controller: :pages, :action => :faq %></li>
					<li><%= link_to "Buy", controller: :pages, :action => :buy %></li>
					<% unless current_user.nil? %>
					<li><%= link_to "Sensors", devices_path %></li>
					<li><%= link_to "Experiments", experiments_path %></li>
					<% end %>
					<li class="divider-vertical"></li>
					<li><%= user_button %>
				</ul>
			</div>
		</div>
	</div>
</header>
<br>